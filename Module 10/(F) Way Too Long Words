#include <stdio.h>
#include<string.h>
int main() {
    int n;
    scanf("%d",&n);
    for (int i=0; i<n; i++){
        char x[101];
        scanf("%s",x);
        int ln=strlen(x);
        if (ln<=10){
            printf("%s\n",x);
        }
        else{
            printf("%c%d%c\n",x[0],ln-2,x[ln-1]);
        }
    }
	
	return 0;
}

