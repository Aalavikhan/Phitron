#include<stdio.h>
int main(){
    int n,s,k;
    scanf("%d",&n);
    s=n-1;
    k=1;
    for (int i=1; i<=n; i++){
        for (int j=0; j<s; j++){
            printf("%c",' ');
        }
        for (int j=0; j<k; j++){
            printf("%c",'*');
        }
        printf("\n");
        k=k+2;
        s--;

    }
    return 0;
}
