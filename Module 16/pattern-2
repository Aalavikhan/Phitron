#include <stdio.h>
int main(){
    int x,n;
    scanf("%d", &x);
    n=x-1;
    int digs=1;
    for (int i=0; i<x; i++){
        for (int j=0; j<n; j++){
            printf("%c",' ');
        }
        for (int k=1; k<=digs; k++){
            printf("%d",digs);
        }
        printf("\n");
        digs++;
        n--;
    }
    return 0;
}
